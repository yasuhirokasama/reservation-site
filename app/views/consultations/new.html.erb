        <% end %>
    </div>

    <div class="field_cliant_info">
        <h2>受診者情報入力</h2>
        <%= form_with model: @consultation do |form| %>
            <table border="1">
                <tr class="cliant_phone_number">
                    <th>お名前</th>
                    <td>
                        <div>
                            <%= form.label '姓' %>
                            <%= form.label '（例：山田）' %>
                            <%= form.text_field :name %>
                        </div>
                        <div>
                            <%= form.label '名' %>
                            <%= form.label '（例：太郎）' %>
                            <%= form.text_field :name %>
                        </div>
                        <div>
                            <%= form.label 'せい' %>
                            <%= form.label '（例：やまだ）' %>
                            <%= form.text_field :name %>
                        </div>
                        <div>
                            <%= form.label 'めい' %>
                            <%= form.label '（例：たろう）' %>
                            <%= form.text_field :name %>
                        </div>
                    </td>
                </tr>
                <tr class="cliant_phone_number">
                    <th>電話番号</th>
                    <td>
                        <div>
                            <%= form.label '携帯電話' %>
                            <%= form.label '（例：09012345678）' %>
                            <%= form.text_field :cell_number %>
                        </div>
                        <div>
                            <%= form.label '固定電話' %>
                            <%= form.label '（例：0123456789）' %>
                            <%= form.text_field :tel_number %>
                        </div>
                    </td>
                </tr>
                <tr class="cliant_email">
                    <th>メールアドレス</th>
                    <td>
                        <div>
                            <%= form.label '（例：haishayoyaku@yoyaku.com）' %>
                            <%= form.text_field :email %>
                        </div>
                    </td>
                </tr>
                <tr class="cliant_birthday">
                    <th>生年月日</th>
                    <td>
                        <div>
                            <%= form.date_select :birthday, start_year: 1940, end_year: Time.current.year, use_month_numbers: true %>
                        </div>
                    </td>
                </tr>
                <tr>
                    <th>性別</th>
                    <td>
                        <div>
                            <%= form.radio_button :sex, 1 %>
                            <%= form.label :sex_1, "男" %>
                            <%= form.radio_button :sex, 2 %>
                            <%= form.label :sex_2, "女" %>
                        </div>
                    </td>
                </tr>
            </table>

            <div><%= form.submit "予約を確定する" %></div>

            <% end %>

    </div>

</div>