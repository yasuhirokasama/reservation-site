<div class="field">

    <div class="field_type">
        <h3>診察希望内容を選択してください</h3>
        <%= form_with model: @consultation do |form| %>
            <%= form.radio_button :visit_type, '歯科点検', class: "radio_btn", id: '歯科点検' %>
            <%= form.label '歯科点検', for: '歯科点検' %>
            <%= form.radio_button :visit_type, '歯がしみる', class: "radio_btn", id: '歯がしみる' %>
            <%= form.label '歯がしみる', for: '歯がしみる' %>
            <%= form.radio_button :visit_type, '親知らずの抜歯', class: "radio_btn", id: '親知らずの抜歯' %>
            <%= form.label '親知らずの抜歯', for: '親知らずの抜歯' %>
            <%= form.radio_button :visit_type, '虫歯・歯周病予防', class: "radio_btn", id: '虫歯・歯周病予防' %>
